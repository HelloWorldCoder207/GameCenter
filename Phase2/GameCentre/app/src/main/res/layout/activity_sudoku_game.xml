<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sudoku_game_background"
    android:padding="3dp"
    tools:context="fall2018.csc2017.game_centre.sudoku.SudokuGameActivity">

    <TextView
        android:id="@+id/player_textview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:text="@string/player_textview"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Player"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/time_plaintext"
        android:text="@string/time_plaintext"
        android:textSize="24sp" />


    <fall2018.csc2017.game_centre.sudoku.SudokuGridView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sudokuGridView"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        tools:context="fall2018.csc2017.game_centre.sudoku.SudokuGameActivity">

    </fall2018.csc2017.game_centre.sudoku.SudokuGridView>

    <Button
        android:id="@+id/buttonUndo"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="495dp"
        android:background="@drawable/sudoku_game_buttons"
        android:text="Undo" />

    <Button
        android:id="@+id/buttonHint"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="495dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/sudoku_game_buttons"
        android:text="Hint" />

    <Button
        android:id="@+id/button"
        android:background="@drawable/sudoku_game_buttons"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="550dp"
        android:text="1"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/button2"
        android:background="@drawable/sudoku_game_buttons"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="550dp"
        android:textStyle="bold"
        android:text="2" />
    <Button
        android:id="@+id/button3"
        android:background="@drawable/sudoku_game_buttons"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="90dp"
        android:textStyle="bold"
        android:layout_marginTop="550dp"
        android:text="3" />
    <Button
        android:id="@+id/button4"
        android:background="@drawable/sudoku_game_buttons"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="135dp"
        android:textStyle="bold"
        android:layout_marginTop="550dp"
        android:text="4" />
    <Button
        android:id="@+id/button5"
        android:background="@drawable/sudoku_game_buttons"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="180dp"
        android:textStyle="bold"
        android:layout_marginTop="550dp"
        android:text="5" />
    <Button
        android:id="@+id/button6"
        android:background="@drawable/sudoku_game_buttons"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="225dp"
        android:textStyle="bold"
        android:layout_marginTop="550dp"
        android:text="6" />
    <Button
        android:id="@+id/button7"
        android:background="@drawable/sudoku_game_buttons"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="270dp"
        android:textStyle="bold"
        android:layout_marginTop="550dp"
        android:text="7" />
    <Button
        android:id="@+id/button8"
        android:background="@drawable/sudoku_game_buttons"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="315dp"
        android:textStyle="bold"
        android:layout_marginTop="550dp"
        android:text="8" />
    <Button
        android:id="@+id/button9"
        android:background="@drawable/sudoku_game_buttons"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="360dp"
        android:textStyle="bold"
        android:layout_marginTop="550dp"
        android:text="9" />


</RelativeLayout>